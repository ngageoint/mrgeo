<ColorMap name="Land Cover">
  <Scaling>Absolute</Scaling>
  <ReliefShading>0</ReliefShading>
  <Interpolate>1</Interpolate>
  <ForceValuesIntoRange>1</ForceValuesIntoRange>
  <!-- null values will be transparent -->
  <NullColor color="0,0,0" opacity="0"/>
  <!-- if opacity is not specified it defaults to 255 -->
  <!-- A value of zero is also transparent -->
  <!--Color value="0" color="0,0,0" opacity="0"/-->
  <!-- Evergreen Forest -->
  <Color value="1" color="0,85,0"/>
  <!-- Evergreen Forest -->
  <Color value="2" color="0,85,0"/>
  <!-- Deciduous Forest -->
  <Color value="3" color="0,170,0"/>
  <!-- Deciduous Forest -->
  <Color value="4" color="0,170,0"/>
  <!-- Mixed Forest -->
  <Color value="5" color="85,255,0"/>
  <!-- Closed Shrublands -->
  <Color value="6" color="170,255,0"/>
  <!-- Open Shrublands -->
  <Color value="7" color="170,255,127"/>
  <!-- Woody Savannas -->
  <Color value="8" color="255,255,0"/>
  <!-- Savannas -->
  <Color value="9" color="255,255,127"/>
  <!-- Grasslands -->
  <Color value="10" color="85,255,127"/>
  <!-- Permanent Wetlands -->
  <Color value="11" color="85,85,127"/>
  <!-- Croplands -->
  <Color value="12" color="255,170,127"/>
  <!-- Urban Areas -->
  <Color value="13" color="255,0,0"/>
  <!-- Cropland -->
  <Color value="14" color="255,170,127"/>
  <!-- Snow/Ice -->
  <Color value="15" color="170,255,255"/>
  <!-- Barren -->
  <Color value="16" color="170,170,0"/>
  <!-- Water Bodies -->
  <Color value="17" color="85,170,255"/>
</ColorMap>
